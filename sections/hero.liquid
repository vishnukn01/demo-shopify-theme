<section class="inner-hero-section">
    {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url }}" >
    {% else %}
        {% capture current %}{% cycle 1,2 %}{% endcapture %}
        {{  'lifestyle-'| placeholder_svg_tag:"placeholder-svg" }}
    {% endif %}
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1>{{ section.settings.title }}</h1>
                {{ section.settings.description }}
                <a class="btn btn-secondary" href="{{ section.settings.button_link }}">{{section.settings.button_label}}</a>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Hero",
    "class": "hero-section",
    "settings": [
        {
            "type": "image_picker",
            "id" : "image",
            "label": "Heading Background Image"
        },
        {
            "type": "text",
            "id" : "title",
            "default": "Hero Headings",
            "label": "Heading Title"
        },
        {
            "type": "richtext",
            "id" : "description",
            "default": "<p>Example para</p>",
            "label": "Heading description"
        },
        {
            "type": "text",
            "id" : "button_label",
            "default": "Button",
            "label": "Heading Button Label"
        },
        {
            "type": "url",
            "id" : "butto_link",
            "label": "Heading Button Link"
        }
    ],
    "presets": [
        {   
            "name": "Simple Hero",
            "category": "hero"
        }
    ]
}
{% endschema %}